<body>

<header>
  <h1 class="logo" data-text="TMI News">TMI News</h1>
  <nav class="tmi-nav">
    <ul class="nav-links">
      <li><a href="index.html" class="home-link">ğŸ  Home</a></li>
    </ul>
  </nav>
  <p class="tagline">Tech | Mayhem | Internet</p>
</header>

<main>
  <section id="news-section">
    <h2>Latest Stories</h2>
    <div id="news-container" class="card-grid"></div>
  </section>

  <section id="algorithm-chronicles">
    <h2>The Algorithm Chronicles</h2>
    <div class="card-grid" id="algorithm-container"></div>
  </section>
</main>

<footer>
  <p>&copy; 2025 TMI Studios. All rights reserved.</p>
</footer>

<script>
// Function to create a story card
function createCard(story, containerId) {
  const container = document.getElementById(containerId);
  const storyId = containerId + "-" + story.date.replace(/-/g,'');

  const card = document.createElement('div');
  card.classList.add('card');

  const shareText = encodeURIComponent(
    `ğŸ“° ${story.headline}\n${story.preview}\nRead full story ğŸ‘‰ ${window.location.href}#${storyId}\nğŸ“¸ ${story.image}`
  );

  card.innerHTML = `
    <img src="${story.image}" alt="${story.headline}">
    <div class="card-content">
      <p class="date">${story.date}</p>
      <h3 id="${storyId}">${story.headline}</h3>
      <p>${story.preview}</p>
      <button class="read-more-btn">Read More</button>
      <div class="full-story hidden"><p>${story.fullStory}</p></div>
      <div class="share-buttons" style="margin-top:1rem; display:flex; gap:0.5rem; flex-wrap:wrap;">
        <a href="https://wa.me/?text=${shareText}" target="_blank" class="share-btn whatsapp">ğŸ“² WhatsApp</a>
        <a href="https://t.me/share/url?url=${window.location.href}#${storyId}&text=${shareText}" target="_blank" class="share-btn telegram">âœˆï¸ Telegram</a>
        <a href="https://twitter.com/intent/tweet?text=${shareText}" target="_blank" class="share-btn twitter">ğŸ¦ Twitter</a>
        <button class="share-btn copy-link-btn">ğŸ“‹ Copy Link</button>
      </div>
    </div>
  `;

  const readBtn = card.querySelector('.read-more-btn');
  const fullStoryDiv = card.querySelector('.full-story');
  readBtn.addEventListener('click', () => {
    fullStoryDiv.classList.toggle('hidden');
    readBtn.textContent = fullStoryDiv.classList.contains('hidden') ? 'Read More' : 'Show Less';
  });

  const copyBtn = card.querySelector('.copy-link-btn');
  copyBtn.addEventListener('click', () => {
    const url = `${window.location.href}#${storyId}`;
    navigator.clipboard.writeText(url)
      .then(() => {
        copyBtn.textContent = 'âœ… Copied';
        document.getElementById(storyId).scrollIntoView({behavior:'smooth'});
        setTimeout(()=>{copyBtn.textContent='ğŸ“‹ Copy Link'},1500);
      });
  });

  container.appendChild(card);
}

// Load stories from JSON
fetch('news.json')
  .then(response => response.json())
  .then(data => {
    data.stories.forEach(story => {
      if (story.section === 'algo') {
        createCard(story, 'algorithm-container');
      } else {
        createCard(story, 'news-container');
      }
    });
  })
  .catch(err => console.error('Error loading news.json:', err));
</script>

</body>
